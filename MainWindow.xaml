<Window x:Class="Omnis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Omnis.UserControls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="880" Width="1720">
    <Grid>
        <TabControl Style="{StaticResource MainTabControl}">
            <TabItem x:Name="AppHub">
                <TabItem.Header>
                    <local:MainNavAppHub/>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition x:Name="AppHubToolBar" Height="50"/>
                        <RowDefinition x:Name="AppHubMain"/>
                    </Grid.RowDefinitions>
                    <TextBlock>App Hub</TextBlock>
                </Grid>
            </TabItem>
            <TabItem x:Name="PasswordManager">
                <TabItem.Header>
                    <Image Source="/Omnis;component/Images/Icons/MainTabControl/PasswordManager.png"/>
                </TabItem.Header>
                <Grid>
                    <TextBlock>Password Manager</TextBlock>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
